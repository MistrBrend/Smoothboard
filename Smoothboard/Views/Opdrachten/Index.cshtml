@model IEnumerable<Smoothboard.Models.Opdracht>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DatumGebracht)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DatumOpgehaald)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AkkoordDesign)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SurfboardDesign)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hoogte)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Lengte)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Klant)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DatumGebracht)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DatumOpgehaald)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AkkoordDesign)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SurfboardDesign)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hoogte)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lengte)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Klant.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
